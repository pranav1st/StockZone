                  <li><a class="active" href="login"><i class="fa fa-fw fa-user"></i> Login</a></li>
              </ul>
      </div>
    </nav>
    <br>

    <div class="container">
      <form action="#">
        <div class="title">Login</div>
        <div class="input-box underline">
          <input type="text" class="email-id" placeholder="Enter Your Email" required>
          <div class="underline"></div>
        </div>
        <div class="input-box">
          <input type="password" class="passwd" placeholder="Enter Your Password" required>
          <div class="underline"></div>
        </div>
        <div class="input-box button">
          <input id="login-submit" type="button" name="" value="Sign in">
        </div>
        <div class="input-box button2">
          <input id="signup-submit" type="button" name="" value="Sign up">
        </div>
      </form>
    </div>
  </body>
  <script src="js/login.js"></script>
</html>
